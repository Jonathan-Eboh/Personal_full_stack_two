<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <title>Event page</title>
    <link rel="shortcut icon" href="favicon.ico">
    <link rel="stylesheet" href="font-awesome.min.css">
    <link rel="stylesheet" href="style.css">
</head>


<body>
    <header>
        <nav>

            <ul>
                <li>
                    <a href="/women">Womens Collection</a>
                </li>
                <li>
                    <a href="/men">Mens Collection</a>
                </li>
                <li>
                    <a href="/jewelery">Jewelery Collection </a>
                </li>
                <li>
                    <a href="/electronics">Electronics Collection</a>
                </li>
            </ul>
        </nav>
    </header>


    <form action="/addEvent" method="POST">
        <input type="date" name="date" id="dateSelect">
        <input type="text" placeholder="Person 1" name="personOne">
        <input type="text" placeholder="Person 2" name="personTwo">
        <input type="text" placeholder="Person 3" name="personThree">
        <input type="text" placeholder="task" name="task">
        <select name="priority" id="prioritySelect">
            <option value="">--Priority--</option>
            <option value="high">High</option>
            <option value="low">Low</option>
            <option value="mid">Mid</option>
        </select>
        <button type="submit">Submit</button>
    </form>



    <ul class="notComplete">
        <% for(var i=0; i<event.length; i++) {%>



            <li class="message <%= event[i].title %>">
                <span>
                    <%= event[i].title %>
                </span>

                <span>
                    <i class="fa fa-trash" aria-hidden="true"></i>
                </span>

                <span>
                    <i class="fa fa-check-square" aria-hidden="true"></i>
                </span>



            </li>

            <% } %>
    </ul>


    <ul class="notComplete">
        <% for(var i=0; i<drink.length; i++) {%>



            <li class="message <%= drink[i].title %>">
                <span>
                    <%= drink[i].strDrink %>
                        <img src="<%= drink[i].strDrinkThumb %>" alt="">
                </span>

                <span>
                    <i class="fa fa-trash" aria-hidden="true"></i>
                </span>

                <span>
                    <i class="fa fa-check-square" aria-hidden="true"></i>
                </span>



            </li>

            <% } %>
    </ul>
    <script src="main.js"></script>



</body>

</html>