<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <title>Todo List</title>
    <link rel="shortcut icon" href="favicon.ico">
    <link rel="stylesheet" href="font-awesome.min.css">
    <link rel="stylesheet" href="styles.css">
</head>

<body>
    <h1>To Do List</h1>
    <h2>Lets get you organized!</h2>

    <h2>Add a Task</h2>

    <form action="/todotask" method="POST">
        <!-- <input type="text" placeholder="name" name="name"> -->
        <input type="text" placeholder="task" name="task">
        <select name="priority" id="prioritySelect">
            <option value="">--Priority--</option>
            <option value="high">High</option>
            <option value="low">Low</option>
            <option value="mid">Mid</option>
        </select>
        <button type="submit">Submit</button>
    </form>


    <h3>Tasks to do</h3>
    <ul class="notComplete">
        <% for(var i=0; i<todolist.length; i++) {%>

            <% if(todolist[i].completed === false) {%>

                <li class="message <%= todolist[i].priority %>">
                    <span>
                        <%= todolist[i].task %>
                    </span>

                    <span>
                        <i class="fa fa-trash" aria-hidden="true"></i>
                    </span>

                    <span>
                        <i class="fa fa-check-square" aria-hidden="true"></i>
                    </span>



                </li>
                <% } %>
                    <% } %>
    </ul>

    <h3>Tasks completed</h3>
    <ul class="complete">
        <% for(var i=0; i<todolist.length; i++) {%>

            <% if(todolist[i].completed) {%>

                <li class="message <%= todolist[i].priority %>">
                    <span>
                        <%= todolist[i].task %>
                    </span>

                    <span>
                        <i class="fa fa-trash" aria-hidden="true"></i>
                    </span>

                </li>
                <% } %>
                    <% } %>
    </ul>



    <script src="main.js"></script>

</body>

</html>